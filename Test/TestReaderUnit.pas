var
  ReturnValue, ExpectedValue: Char;
begin
  ExpectedValue := '1';

  ReturnValue := FReader.PeekChar;
  CheckEquals(ExpectedValue, ReturnValue);

  ReturnValue := FReader.NextChar;
  CheckEquals(ExpectedValue, ReturnValue);

  ExpectedValue := '2';
  ReturnValue := FReader.PeekChar;
  CheckEquals(ExpectedValue, ReturnValue);



end;

